<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  backupGlobals="false"
  backupStaticAttributes="false"
  bootstrap="tests/bootstrap.php"
  colors="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  printerClass="Codedungeon\PHPUnitPrettyResultPrinter\Printer"
  stopOnError="false"
  stopOnFailure="false"
  stopOnIncomplete="false"
  stopOnSkipped="false"
  syntaxCheck="false"
  verbose="true"
  >
  <testsuites>
    <testsuite name="unit">
      <directory prefix="test-" suffix=".php">./tests/unit/</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
      <directory>./src</directory>
      <directory>./examples</directory>
      <exclude>
        <directory>./node_modules</directory>
        <directory>./vendor</directory>
        <directory>./tests</directory>
      </exclude>
    </whitelist>
  </filter>
  <logging>
    <log type="coverage-html" target="tests/_reports/html" lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="tests/_reports/logs/clover-unit.xml"/>
    <log type="coverage-php" target="tests/_reports/logs/coverage-unit.cov"/>
    <log type="junit" target="tests/_reports/logs/logfile-unit.xml"/>
  </logging>
</phpunit>
